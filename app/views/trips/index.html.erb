<h1>All Trips</h1>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Location</th>
  </tr>
  <% @trips.each do |trip| %>
  <tr>
    <td><%= trip.start_date %></td>
    <td><%= trip.end_date %></td>
    <td><%= trip.location %></td>
    <td><%= link_to 'Show', trip_path(trip) %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Delete', trip_path(trip),
            method: :delete,
            data: { confirm: 'Are you sure you want to delete this trip?' } %></td>
  </tr>
  <% end %>
</table>
